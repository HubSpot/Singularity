# Port mappings?
{
  "version": "pre-draft", # TODO - need to sub in runc spec version????
  "platform": {
    "os": "{{{ os }}}",
    "arch": "{{{ arch }}}"
  },
  "process": {
    "terminal": {{{ runcConfig.terminal }}},
    "user": {
      "uid": {{{ uid }}},
      "gid": {{{ gid }}},
      "additionalGids": null # TODO - get other group ids for user here
    },
    "args": [
      "sh"{{#each commandArgs }},
      "{{{ this }}}"{{/each}}
    ],
    "env": [
      "PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
      "TERM=xterm",
      "MESOS_SANDBOX=/mnt/mesos/sandbox",
      "LOG_HOME=/mnt/mesos/sandbox/logs",
      {{#each envContext.env}}"{{{name}}}={{{ value }}}",{{/each}}
      "MESOS_TASK_ID={{{ runContext.taskId }}}"
    ],
    "cwd": ""
  },
  "root": {
    "path": "{{{ runContext.taskAppDirectory }}}",
    "readonly": true # TODO - what does this do?
  },
  "hostname": "shell", # TODO - task host here?
  "mounts": [
    {
      "type": "proc",
      "source": "proc",
      "destination": "/proc",
      "options": ""
    },
    {
      "type": "tmpfs",
      "source": "tmpfs",
      "destination": "/dev",
      "options": "nosuid,strictatime,mode=755,size=65536k"
    },
    {
      "type": "devpts",
      "source": "devpts",
      "destination": "/dev/pts",
      "options": "nosuid,noexec,newinstance,ptmxmode=0666,mode=0620,gid=5"
    },
    {
      "type": "tmpfs",
      "source": "shm",
      "destination": "/dev/shm",
      "options": "nosuid,noexec,nodev,mode=1777,size=65536k"
    },
    {
      "type": "mqueue",
      "source": "mqueue",
      "destination": "/dev/mqueue",
      "options": "nosuid,noexec,nodev"
    },
    {
      "type": "sysfs",
      "source": "sysfs",
      "destination": "/sys",
      "options": "nosuid,noexec,nodev"
    },
    {
      "type": "cgroup",
      "source": "cgroup",
      "destination": "/sys/fs/cgroup", # TODO - get current cgroup location here if exists
      "options": "nosuid,noexec,nodev,relatime,ro"
    },
    {{#each runcConfig.mounts}}{
      "type": "{{{ type }}}",
      "source": "{{{ source }}}",
      "destination": "{{{ destination }}}",
      "options": "{{{ options }}}"
    },
    {{/each}}
    {
      "type": "bind",
      "source": "{{{ runContext.logDir }}}", # TODO - is this relative to rootfs path?
      "destination": "/mnt/mesos/sandbox",
      "options": "" # TODO - appropriate options to mount as RW?
    }
  ],
  "hooks": {
    "prestart": null,
    "poststop": null
  },
  "linux": {
    "uidMappings": null,
    "gidMappings": null,
    "rlimits": null,
    "sysctl": null,
    "resources": {
      "disableOOMKiller": false,
      "memory": { # TODO - from current resources/offer
        "limit": 0,
        "reservation": 0,
        "swap": 0,
        "kernel": 0,
        "swappiness": -1
      },
      "cpu": { # TODO - from current resources/offer
        "shares": 0,
        "quota": 0,
        "period": 0,
        "realtimeRuntime": 0,
        "realtimePeriod": 0,
        "cpus": "",
        "mems": ""
      },
      "blockIO": {
        "blkioWeight": 0,
        "blkioWeightDevice": "",
        "blkioThrottleReadBpsDevice": "",
        "blkioThrottleWriteBpsDevice": "",
        "blkioThrottleReadIopsDevice": "",
        "blkioThrottleWriteIopsDevice": ""
      },
      "hugepageLimits": null,
      "network": {
        "classId": "",
        "priorities": null
      }
    },
    "namespaces": [
      {
        "type": "pid",
        "path": ""
      },
      {
        "type": "network",
        "path": ""
      },
      {
        "type": "ipc",
        "path": ""
      },
      {
        "type": "uts",
        "path": ""
      },
      {
        "type": "mount",
        "path": ""
      }
    ],
    "capabilities": [
      "AUDIT_WRITE",
      "KILL",
      "NET_BIND_SERVICE"
    ],
    "devices": [
      "null",
      "random",
      "full",
      "tty",
      "zero",
      "urandom"
    ],
    "rootfsPropagation": ""
  }
}