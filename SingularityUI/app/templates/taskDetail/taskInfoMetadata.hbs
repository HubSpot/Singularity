{{#if data.taskMetadata}}
    <div class="page-header">
        <h2>Metadata</h2>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Type
                </th>
                <th>
                    Time
                </th>
                <th>
                    User
                </th>
                <th>
                    Message
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each data.taskMetadata}}
                <tr>
                    <td>
                        {{ title }}
                    </td>
                    <td>
                        {{ type }}
                    </td>
                    <td data-value="{{ timestamp }}">
                        {{timestampFromNow timestamp}}
                    </td>
                    <td>
                        {{#if user}}
                            {{ user }}
                        {{else}}
                            &mdash;
                        {{/if}}
                    </td>
                    <td>
                        {{#if message}}
                            {{ message }}
                        {{else}}
                            &mdash;
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{/if}}
