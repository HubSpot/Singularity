<div class="tail-header">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <ul class="breadcrumb">
                    {{#each breadcrumbs}}
                        <li>
                            {{#ifEqual name ../filename}}
                                <strong>{{ name }}</strong>
                            {{else}}
                                <a href="{{appRoot}}/task/{{ ../../taskId }}/files/{{ path }}">
                                    {{ name }}
                                </a>
                            {{/ifEqual}}
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-3 hidden-xs tail-buttons">
                <a class="btn btn-default tail-top-button">
                    To top
                </a>
                <a class="btn btn-default tail-bottom-button">
                    To bottom
                </a>
            </div>
        </div>
    </div>
</div>

<div class="tail-indicator">
    <div class="page-loader centered"></div>
    <span>Tailing</span>
</div>

<div class="tail-contents">

</div>
