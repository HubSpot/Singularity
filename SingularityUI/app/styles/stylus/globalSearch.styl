.global-search-active.global-search
    display block

.global-search
    position fixed
    z-index 8000
    top 0
    left 0
    bottom 0
    right 0
    background rgba(255, 255, 255, .98)

    .close-button-container
        margin 20px 0 50px
        text-align right

        a
            color inherit
            font-size 50px

            &:hover
                text-decoration none

    .tip
        text-align right

    strong
        font-weight 400
        color rgba(0, 0, 0, .25)

    input[type="search"]
        background rgba(240, 240, 240, .9)

        &, &::-webkit-search-cancel-button:after
            font-size 20px !important

    // Better typeahead styles
    .typeahead
        ul
            list-style-type: none
            padding: 0
            margin: 0

        &, .typeahead-selector, li
            display block !important
            width 100%

        li
            padding: 10px
            cursor: pointer

            p
                margin-bottom: 0

            &.hover
                background rgba(0, 0, 0, .03)
