@import colors

.requests-filter-container
    margin-top -4px

    .nav.nav-pills-multi-select
        display inline-block

        li
            margin 0

        li.active a
            margin 0 !important
            background #f3f3f3
            color $grey-medium
            border-radius 0

        a
            background #fff
            color #ccc

        li.active a:hover, li a:hover
            background #eee
            border none
            box-shadow none

    .filter-tip
        margin-left 20px
        position relative
        top -14px

    .icon-placeholder
        display inline-block
        width 1em