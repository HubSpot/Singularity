@import colors
@import nib

html
    height 100%

    body
        overflow-y auto
        min-height 100%

a
    cursor pointer

a.disabled
    cursor none
    pointer-events none
    color #999

a.disabled:hover
    background-color transparent

.headline-link
    color $base-text
    display inline-block

.link-spacer
    opacity 0.2
    padding 0px 5px

.subtle
    opacity 0.5

// Overrides

.messenger-message
    background #fff !important

.btn[disabled]
    opacity: .25

.page-header
    margin-top 20px
    margin-bottom 10px

    h1, h2, h3
        margin 0

.row
    margin-bottom 1em

#nav-user-name
    cursor default

table th
    text-align left

.page-header small
    margin-left 1em

code
    border 1px solid rgba(0, 0, 0, .075)
    background rgba(0, 0, 0, .05)
    color rgba(0, 0, 0, .75)

.healthcheck-message
    white-space pre-line

.healthcheck-link
    font-weight bolder
    margin 0 0.5em

.healthcheck-number
    font-weight bolder

.flash-background
    background: #fbfbfb

    .page-header
        background: rgba(0, 123, 255, .1)

.btn-group, .btn-group .btn
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none

.messenger-message p:last-child
    margin-bottom 0

.tag-popover
    word-break break-all

.modal-header
  h1, h2, h3, h4
    margin: 0

// Fix for FF
@-moz-document url-prefix()
    fieldset
        display table-cell

.wait-for-checklist
    margin-top 10px
    .wait-for-task-start
        font-weight bolder

    &.waiting-for-file
        .wait-for-task-start
            font-weight normal
        .wait-for-file-exists
            font-weight bolder

.help
    color #999
    font-size 0.9em

.tabbed-page
    margin 0 25px

.tab-col
    padding-bottom 20px
