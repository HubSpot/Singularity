@import nib

// Okay so it's not REALLY a definition list, but hey
ul.horizontal-description-list

    li
        position relative
        overflow hidden
        height 69px
        margin-bottom 20px

        &, div
            border-radius 4px

        div
            position relative
            width 100%
            height 69px

            h4
                margin-top 0

        &:hover
            overflow visible
            z-index 500

            div
                height auto
                box-shadow 0 0 0 5px rgba(255, 255, 255, .9)

                p
                    height auto
                    overflow visible
                    word-break break-all
                    white-space pre-wrap

        div
            background #f3f3f3
            padding 10px

        h4 a
            float right
            font-weight 400
            font-size 12px

            &:hover
                text-decoration none

        p
            margin-bottom 0
            height 1.3em
            white-space nowrap
            text-overflow ellipsis
            overflow hidden
