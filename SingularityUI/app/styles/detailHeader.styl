@import colors

.detail-header
    
    h1, h2, h3, h4, h5
        margin-top 0
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        position relative

        .btn.offset-link
            background #fff

            &:hover, &:focus
                text-decoration none

            &:focus
                outline none

    // Request name in Task detail page
    h5
        line-height 1.5em

    .button-container
        text-align right

        .btn
            margin-bottom 5px

    .lead
        font-size 16px
        color #666
        margin 0

    .request-state
        text-transform lowercase
        padding 4px .8em
        line-height 27px
        font-size 18px
        border-radius 4px
        background #f3f3f3
        color #888
        margin-right .5em
        
        &[data-state='ACTIVE']
            color #519D3D
        
        &[data-state='PAUSED']
            color #3374CD
        
        &[data-state='SYSTEM_COOLDOWN']
            color #BF5D36
        
        &:empty
            display none

    .request-type
        color #bbb

    .well code
        background #fff
        color #888
