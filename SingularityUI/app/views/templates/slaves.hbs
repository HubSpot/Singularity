<header class="jumbotron subhead" id="overview">
    <h1>Slaves</h1>
</header>

<section>
    <div class="page-header">
        <h1>Active Slaves</h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{#if slavesActive.length}}
                <table class="table" data-sortable="true">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rack</th>
                            <th>Host</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn slavesActive}}
                            <tr>
                                <td>{{ id }}</td>
                                <td>{{ rackId }}</td>
                                <td>{{ host }}</td>
                                <td>{{ state }}</td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                <center><p>No active slaves.</p></center>
            {{/if}}
        </div>
    </div>
</section>

