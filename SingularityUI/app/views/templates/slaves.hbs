<header class="jumbotron subhead" id="overview">
    <h1>Slaves</h1>
</header>

<section>
    <div class="page-header">
        <h1>Active Slaves</h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{#if slavesActive.length}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rack</th>
                            <th>Host</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn slavesActive}}
                            <tr>
                                <td>{{ id }}</td>
                                <td>{{ rackId }}</td>
                                <td>{{ host }}</td>
                                <td>{{ state }}</td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                {{#if fetchDone}}
                    <center><p>No active slaves.</p></center>
                {{else}}
                    <div class="page-loader centered"></div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Dead Slaves</h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{#if slavesDead.length}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rack</th>
                            <th>Host</th>
                            <th>State</th>
                            <th data-sortable="false"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn slavesDead}}
                            <tr>
                                <td>{{ id }}</td>
                                <td>{{ rackId }}</td>
                                <td>{{ host }}</td>
                                <td>{{ state }}</td>
                                <td class="actions-column"><a data-slave-id="{{ id }}" data-action="remove" data-collection="slavesDead">Remove</a>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                {{#if fetchDone}}
                    <center><p>No dead slaves.</p></center>
                {{else}}
                    <div class="page-loader centered"></div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>

