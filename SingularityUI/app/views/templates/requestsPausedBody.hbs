<section>
    <div class="page-header">
        <h1>Paused</h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{#if requests.length}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="hidden-phone">Requested</th>
                            <th class="visible-desktop">Deploy User</th>
                            <th class="visible-desktop">Instances</th>
                            <th class="hidden-phone" data-sortable="false"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn requests}}
                            <tr data-request-id="{{ id }}" data-request-deploy-user="{{ deployUser }}">
                                <td><span title="{{ id }}"><a href="{{#appRoot}}{{/appRoot}}request/{{ id }}" data-route="request/{{ id }}">{{#hardBreak name}}{{/hardBreak}}</a></span></td>
                                <td class="hidden-phone" data-value="{{ timestamp }}"><span title="{{ timestamp }}">{{ timestampHuman }}</span></td>
                                <td class="visible-desktop">{{ deployUser }}</td>
                                <td class="visible-desktop">{{ instances }}</td>
                                <td class="actions-column hidden-phone">
                                    <a data-request-id="{{ id }}" data-action="viewJSON">JSON</a>
                                    <a data-request-id="{{ id }}" data-action="unpause">Unpause</a>
                                    <a data-request-id="{{ id }}" data-action="remove" data-action-remove-type="deletePaused">Remove</a>
                                </td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                {{#if collectionSynced}}
                    <div class="empty-table-message"><p>No paused requests</p></div>
                {{else}}
                    <div class="page-loader centered"></div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>

