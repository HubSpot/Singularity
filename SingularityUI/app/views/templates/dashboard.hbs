<header class="jumbotron subhead" id="overview">
    <h1>Singularity</h1>
</header>

<section>
    <div class="page-header">
        <h1>Starred Requests</h1>
    </div>
</section>

{{#if collectionSycned}}
    <section>
        <div class="row-fluid">
            {{#if requests.length}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th data-sortable="false"></th>
                            <th>Request</th>
                            <th class="hidden-phone">Requested</th>
                            <th class="visible-desktop">Deploy user</th>
                            <th class="visible-large-desktop">Instances</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn requests}}
                            <tr data-request-id="{{ id }}">
                                <td><a class="star" data-request-id="{{ id }}" data-request-name="{{ name }}" data-action="unstar" data-starred="true">★</a></td>
                                <td><span title="{{ id }}"><a href="{{#appRoot}}{{/appRoot}}request/{{ id }}" data-route="request/{{ id }}">{{#hardBreak id}}{{/hardBreak}}</a></span></td>
                                <td class="hidden-phone" data-value="{{ timestamp }}"><span title="{{ timestamp }}">{{ timestampHuman }}</span></td>
                                <td class="visible-desktop">{{ deployUser }}</td>
                                <td class="visible-large-desktop">{{ instances }}</td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                <div class="empty-table-message"><p>No starred requests</p></div>
            {{/if}}
        </div>
    </section>

    {{#if requestsNotFound.length}}
        <section>
            <div class="page-header">
                <h1>Starred Non-active Requests</h1>
            </div>
            <div class="row-fluid">
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th data-sortable="false"></th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn requestsNotFound}}
                            <tr>
                                <td><a class="star" data-request-name="{{ name }}" data-action="unstar" data-starred="true">★</a></td>
                                <td>{{#hardBreak name}}{{/hardBreak}}</td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            </div>
        </section>
    {{/if}}
{{else}}
    <div class="page-loader centered cushy"></div>
{{/if}}