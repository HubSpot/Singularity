{{#if requests.length}}
    <table class="table" data-sortable>
        <thead>
            <tr>
                <th>ID</th>
                <th class="visible-desktop">User</th>
                <th class="hidden-phone">Timestamp</th>
                <th class="visible-desktop">Cleaning Type</th>
            </tr>
        </thead>
        <tbody>
            {{#eachWithFn requests}}
                <tr data-request-id="{{ id }}">
                    <td>{{#hardBreak id}}{{/hardBreak}}</td>
                    <td class="visible-desktop">{{ user }}</td>
                    <td class="hidden-phone" data-value="{{ timestamp }}">{{ timestampHuman }}</td>
                    <td class="visible-desktop">{{ cleanupType }}</td>
                </tr>
            {{/eachWithFn}}
        </tbody>
    </table>
{{else}}
    {{#if collectionSynced}}
        <div class="empty-table-message"><p>No cleaning requests</p></div>
    {{else}}
        <div class="page-loader centered cushy"></div>
    {{/if}}
{{/if}}