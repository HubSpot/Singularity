{{#if fetchDoneRequestActiveDeploy}}
    {{#if requestActiveDeploy.deployMarker}}{{#if requestActiveDeploy.deployResult}}
        <section>
            <h3>Deploy <code>{{ requestActiveDeploy.deployMarker.deployId }}</code> by {{ requestActiveDeploy.deployMarker.user }}</h3>
            <p>{{ requestActiveDeploy.deployResult.deployStateHuman }} {{ requestActiveDeploy.deployResult.timestampHuman }}</p>
        </section>
    {{/if}}{{/if}}
    {{#if requestActiveDeploy.deployStatistics}}
        <section>
            <div class="page-header">
                <h1>Current deploy statistics</h1>
            </div>
            <div class="row-fluid">
                <div class="span4">
                    <div class="well">
                        <div class="big-number">
                            <div class="number" data-state-attribute="requests">
                                {{ requestActiveDeploy.deployStatistics.numSuccess }}
                            </div>
                            <div class="number-label">successful tasks</div>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="well">
                        <div class="big-number">
                            <div class="number" data-state-attribute="requests">
                                {{ requestActiveDeploy.deployStatistics.numFailures }}
                            </div>
                            <div class="number-label">failed tasks</div>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="well">
                        <div class="big-number">
                            <div class="number" data-state-attribute="requests">
                                {{ requestActiveDeploy.deployStatistics.numSequentialRetries }}
                            </div>
                            <div class="number-label">retries</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {{/if}}
{{else}}
    <section>
        <div class="page-loader centered cushy"></div>
    </section>
{{/if}}